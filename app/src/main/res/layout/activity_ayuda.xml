<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fondo"
    android:hapticFeedbackEnabled="true"
    tools:context=".Ayuda">

    <Button
        android:id="@+id/Atrasayu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atras"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.036" />

    <EditText
        android:id="@+id/cuadro"
        android:layout_width="366dp"
        android:layout_height="575dp"
        android:background="#A4918C8C"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.634" />

    <TextView
        android:id="@+id/titulo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#000000"
        android:text=" ¿Cómo inserto dinero?"
        android:textColor="#040303"
        android:textColorHighlight="#000000"
        android:textColorHint="#000000"
        android:textColorLink="#0B0909"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.104"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15" />

    <TextView
        android:id="@+id/informacion1"
        android:layout_width="352dp"
        android:layout_height="69dp"
        android:shadowColor="#000000"
        android:text="Para insertar dinero, lo que debe hacer es irse a la pantalla de inicio y una vez allí puedes pulsar el icono de + y te llevará a la pantalla de ingreso de dinero. Una vez dentro, ingrese el dinero , la fecha y su concepto."
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.372"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="48dp"
        android:layout_height="33dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.87"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.262"
        app:srcCompat="@mipmap/mas" />

    <Button
        android:id="@+id/separador1"
        android:layout_width="365dp"
        android:layout_height="11dp"
        android:shadowColor="#5E5B5B"
        android:textColor="#5E5B5B"
        android:textColorHighlight="#5E5B5B"
        android:textColorHint="#5E5B5B"
        android:textColorLink="#5E5B5B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        app:rippleColor="#5D5A5A"
        app:strokeColor="#5E5B5B" />

    <TextView
        android:id="@+id/titulo2"
        android:layout_width="357dp"
        android:layout_height="29dp"
        android:shadowColor="#000000"
        android:text=" ¿Por qué no se actualiza mi dinero?"
        android:textColor="#040303"
        android:textColorHighlight="#000000"
        android:textColorHint="#000000"
        android:textColorLink="#0B0909"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.388"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.323" />

    <TextView
        android:id="@+id/informacion2"
        android:layout_width="365dp"
        android:layout_height="86dp"
        android:shadowColor="#000000"
        android:text="Si ve que a la hora de usted hacer un gasto su dinero no se actualizó, no se preocupe, estamos trabajando para que sea inmediato, mientras tanto pude darle a cualquier otro botón y cuando vuelva a la página principal se habrá actualizado."
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.407" />

    <Button
        android:id="@+id/separador2"
        android:layout_width="365dp"
        android:layout_height="13dp"
        android:shadowColor="#5E5B5B"
        android:textColor="#5E5B5B"
        android:textColorHighlight="#5E5B5B"
        android:textColorHint="#5E5B5B"
        android:textColorLink="#5E5B5B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.484"
        app:rippleColor="#5D5A5A"
        app:strokeColor="#5E5B5B" />

    <TextView
        android:id="@+id/titulo3"
        android:layout_width="317dp"
        android:layout_height="26dp"
        android:shadowColor="#000000"
        android:text=" ¿Cómo deberia poner mi dinero?"
        android:textColor="#040303"
        android:textColorHighlight="#000000"
        android:textColorHint="#000000"
        android:textColorLink="#0B0909"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.244"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.512" />

    <TextView
        android:id="@+id/informacion3"
        android:layout_width="365dp"
        android:layout_height="86dp"
        android:shadowColor="#000000"
        android:text="Para un correcto uso de nuestra aplicación a la hora de insertar dinero o cuando se realice un gasto, es preferible que el formato sea como el siguiente ejemplo 1.20. Se deberá usar el punto en lugar de la coma."
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6" />

    <Button
        android:id="@+id/separador3"
        android:layout_width="365dp"
        android:layout_height="13dp"
        android:shadowColor="#5E5B5B"
        android:textColor="#5E5B5B"
        android:textColorHighlight="#5E5B5B"
        android:textColorHint="#5E5B5B"
        android:textColorLink="#5E5B5B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.64"
        app:rippleColor="#5D5A5A"
        app:strokeColor="#5E5B5B" />

    <TextView
        android:id="@+id/titulo4"
        android:layout_width="317dp"
        android:layout_height="26dp"
        android:shadowColor="#000000"
        android:text=" ¿Cómo uso el calendario?"
        android:textColor="#040303"
        android:textColorHighlight="#000000"
        android:textColorHint="#000000"
        android:textColorLink="#0B0909"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.244"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.67" />

    <TextView
        android:id="@+id/informacion3"
        android:layout_width="365dp"
        android:layout_height="86dp"
        android:shadowColor="#000000"
        android:text="Para un correcto uso del calendario, lo que se debe hacer es indicarle mediante el calendario la fecha que quieres usar, aunque por defecto uses la del día en que uses la aplicación."
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.787" />
</androidx.constraintlayout.widget.ConstraintLayout>